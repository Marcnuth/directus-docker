#!/bin/bash
set -e

DIRECTUS_APP_VERSION=${1:-master}

rm -rf /var/www/app
mkdir -p /var/www

wget -O /tmp/directus_app_download.tar.gz https://github.com/directus/app/archive/$DIRECTUS_APP_VERSION.tar.gz
tar -xf /tmp/directus_app_download.tar.gz -C /var/www
mv /var/www/app* /var/www/app
rm /tmp/directus_app_download.tar.gz
